<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:fitsSystemWindows="true"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="140dp"
		android:layout_height="140dp"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="0.0dip"
		android:adjustViewBounds="true"
		android:background="@drawable/nightmare"
		android:clickable="true"
		android:gravity="center_vertical"
		android:padding="0.0dip"
		android:src="@drawable/launcher_background" />

	<LinearLayout
		android:id="@+id/a"
		android:layout_below="@id/imageView"
		android:gravity="left|center"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView
			android:textColor="@color/dark_black"
			android:textStyle="bold"
			android:textAppearance="?android:textAppearanceSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/Label_MyName"
			android:textAlignment="center"
			android:layout_below="@id/imageView"
			android:id="@id/about"
			android:clickable="true"
			android:layout_alignParentStart="true"
			android:layout_alignParentEnd="true"
            android:paddingEnd="30dp"/>

		<TextView
			android:textColor="@color/dark_black"
			android:background="@drawable/bg_listview_item"
			android:foreground="?android:attr/selectableItemBackground"
			android:textStyle="bold"
			android:textAppearance="?android:textAppearanceSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="关注微博点我"
			android:onClick="WeiBo"
			android:clickable="true"
			android:layout_below="@id/about"
			android:textAlignment="center"
			android:id="@+id/weibo"
			android:layout_alignParentStart="true"
			android:layout_alignParentEnd="true"/>

	</LinearLayout>

	<TextView
		android:textColor="@color/dark_black"
		android:paddingTop="10.0dip"
		android:textStyle="bold"
		android:id="@+id/before"
		android:layout_below="@id/a"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="前言:这个软件的开始，本人正式成为一名ROMER，此软件长期更新，作者从没有经过正式的编程学习，所会的全部来自各种博客各种论坛的教程跟Githup上的源码，有什么建议可以直接联系QQ，做得不好还请轻喷，我也会尽量添加新功能和更新系统"/>

	<TextView
		android:textStyle="bold"
		android:textColor="@color/dark_black"
		android:textAppearance="?android:textAppearanceSmall"
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="6.0dip"
		android:layout_below="@id/before"
		android:text="如果你认为我做的这些对你来说有价值的,欢迎给作者捐赠，捐赠数额随意，重在心意。(点击上方LOGO联系作者QQ，长按加群)"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true"/>

</RelativeLayout>

