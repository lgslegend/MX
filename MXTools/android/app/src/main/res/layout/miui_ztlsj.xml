<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="match_parent">

	<FrameLayout
		android:layout_height="fill_parent"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:background="#FAFAFA">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@android:id/title"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="0.0dip"
				android:paddingLeft="4.0dip"
				android:paddingTop="0.0dip"
				android:text="提示:点击后自动重启生效(点击再次提示)"
				android:textColor="#ff303030"
				android:textSize="14.0sp" />

			<TextView
				android:id="@android:id/title"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="0.0dip"
				android:paddingLeft="4.0dip"
				android:paddingTop="0.0dip"
				android:text="显示农历/星期/时间"
				android:textColor="#ff303030"
				android:textSize="14.0sp" />

			<ImageView
				android:id="@+id/ztlsj_xsnlxqsj"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:background="@drawable/bg_listview_item"
				android:clickable="true"
				android:src="@drawable/systemui_iosui" />

			<TextView
				android:id="@android:id/title"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="0.0dip"
				android:paddingLeft="4.0dip"
				android:paddingTop="0.0dip"
				android:text="显示农历/时间"
				android:textColor="#ff303030"
				android:textSize="14.0sp" />

			<ImageView
				android:id="@+id/ztlsj_xsnlsj"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:background="@drawable/bg_listview_item"
				android:clickable="true"
				android:src="@drawable/systemui_ios" />

			<TextView
				android:id="@android:id/title"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="0.0dip"
				android:paddingLeft="4.0dip"
				android:paddingTop="0.0dip"
				android:textColor="#ff303030"
				android:textSize="14.0sp" />

			<ImageView
				android:id="@+id/ztlsj_xsxqsj"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_listview_item"
				android:clickable="true"
				android:src="@drawable/systemui_default" />

			<TextView
				android:id="@android:id/title"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="0.0dip"
				android:paddingStart="4.0dip"
				android:paddingTop="0.0dip"
				android:text="仅显示时间"
				android:textColor="#ff303030"
				android:textSize="14.0sp" />

			<ImageView
				android:id="@+id/ztlsj_jsssj"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_listview_item"
				android:clickable="true"
				android:src="@drawable/systemui_default" />

		</LinearLayout>

	</FrameLayout>

</ScrollView>

