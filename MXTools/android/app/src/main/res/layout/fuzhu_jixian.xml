<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="wrap_content"
	android:layout_weight="1.0"
	android:orientation="vertical"
	android:background="#FFFFFF"
	android:focusable="true">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="vertical">

		<TextView
			android:textSize="14.0sp"
			android:textColor="#ff303030"
			android:id="@android:id/title"
			android:paddingLeft="4.0dip"
			android:paddingTop="0.0dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="0.0dip"
			android:text="提示:点击后自动重启生效(点击再次提示)"/>

		<TextView
			android:textSize="14.0sp"
			android:textColor="#ff303030"
			android:id="@android:id/title"
			android:paddingLeft="4.0dip"
			android:paddingTop="0.0dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="0.0dip"
			android:text="\u0009影响系统的正常功能，删除了计算器、电子邮件、动态壁纸、米联服务、小米钱包、指南针、扫一扫、视频、便签、搜狗输入法、浏览器、快传、音乐、小米VIP等级"/>
		
		<ImageView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
				android:clickable="true"
				android:background="@drawable/bg_listview_item"
				android:id="@+id/fuzhu_jixian"
			android:src="@drawable/home"/>

	</LinearLayout>

</FrameLayout>

