<?xml version="1.0" encoding="utf-8"?>
	<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="fill_parent"
		android:layout_width="wrap_content"
	android:background="#ffffff"
		android:id="@+id/fuzhu"
		android:orientation="vertical">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:paddingTop="0dp">

			<LinearLayout
				android:gravity="center"
				android:clickable="true"
				android:background="@drawable/bg_listview_item"
				android:orientation="horizontal"
				android:paddingTop="0.0dp"
				android:layout_width="wrap_content"
				android:layout_height="48dp"
				android:paddingStart="10.0dip"
				android:foreground="?android:attr/selectableItemBackground"
				android:id="@+id/shangdian"
				android:focusable="true">

				<RelativeLayout
					android:paddingTop="0.0dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0">

					<TextView
						android:textSize="14.0sp"
						android:textColor="#ff000000"
						android:id="@android:id/title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="2.0dip"
						android:text="应用商店"
						android:layout_alignParentStart="true"
						android:layout_alignParentEnd="true"/>

					<TextView
						android:textSize="12.0sp"
						android:textColor="#ff696666"
						android:id="@android:id/summary"
						android:layout_width="300.0dip"
						android:layout_height="wrap_content"
						android:text="恢复小米官方应用商店"
						android:layout_below="@android:id/title"
						android:gravity="top"/>

				</RelativeLayout>

			</LinearLayout>

			<LinearLayout
				android:gravity="center"
				android:clickable="true"
				android:orientation="horizontal"
				android:paddingTop="0.0dip"
				android:layout_width="wrap_content"
				android:layout_height="48dp"
				android:paddingStart="10.0dip"
				android:foreground="?android:attr/selectableItemBackground"
				android:background="@drawable/bg_listview_item"
				android:id="@+id/shidu"
				android:focusable="true">

				<RelativeLayout
					android:paddingTop="0.0dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0">

					<TextView
						android:textSize="14.0sp"
						android:textColor="#ff000000"
						android:id="@android:id/title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="2.0dip"
						android:text="适度精简"
						android:layout_alignParentStart="true"
						android:layout_alignParentEnd="true"/>

					<TextView
						android:textSize="12.0sp"
						android:textColor="#ff696666"
						android:id="@android:id/summary"
						android:layout_width="300.0dip"
						android:layout_height="wrap_content"
						android:text="适度精简系统"
						android:layout_below="@android:id/title"
						android:gravity="top"/>

				</RelativeLayout>

			</LinearLayout>

			<LinearLayout
				android:gravity="center"
				android:clickable="true"
				android:orientation="horizontal"
				android:paddingTop="0.0dip"
				android:layout_width="wrap_content"
				android:layout_height="48dp"
				android:paddingStart="10.0dip"
				android:background="@drawable/bg_listview_item"
				android:foreground="?android:attr/selectableItemBackground"
				android:id="@+id/jixian"
				android:focusable="true">

				<RelativeLayout
					android:paddingTop="0.0dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0">

					<TextView
						android:textSize="14.0sp"
						android:textColor="#ff000000"
						android:id="@android:id/title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="2.0dip"
						android:text="极限精简"
						android:layout_alignParentStart="true"
						android:layout_alignParentEnd="true"/>

					<TextView
						android:textSize="12.0sp"
						android:textColor="#ff696666"
						android:id="@android:id/summary"
						android:layout_width="300.0dip"
						android:layout_height="wrap_content"
						android:text="最大程度精简系统"
						android:layout_below="@android:id/title"
						android:gravity="top"/>

				</RelativeLayout>

			</LinearLayout>

			<LinearLayout
				android:gravity="center"
				android:clickable="true"
				android:orientation="horizontal"
				android:paddingTop="0.0dip"
				android:layout_width="wrap_content"
				android:layout_height="48dp"
				android:paddingStart="10.0dip"
				android:background="@drawable/bg_listview_item"
				android:foreground="?android:attr/selectableItemBackground"
				android:id="@+id/zidingyi"
				android:focusable="true">

				<RelativeLayout
					android:paddingTop="0.0dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0">

					<TextView
						android:textSize="14.0sp"
						android:textColor="#ff000000"
						android:id="@android:id/title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="2.0dip"
						android:text="自定义精简"
						android:layout_alignParentStart="true"
						android:layout_alignParentEnd="true"/>

					<TextView
						android:textSize="12.0sp"
						android:textColor="#ff696666"
						android:id="@android:id/summary"
						android:layout_width="300.0dip"
						android:layout_height="wrap_content"
						android:text="自定义精简系统"
						android:layout_below="@android:id/title"
						android:gravity="top"/>

				</RelativeLayout>

			</LinearLayout>

		</LinearLayout>

	</FrameLayout>


